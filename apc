set -e

absolutiseScripts() { SCRIPTS="$1" ; echo "$SCRIPTS" | grep -q ^/ || SCRIPTS="`dirname "$2"`/$SCRIPTS" ; } ; absolutiseScripts "`command -v "$0"`" "`pwd`/." ; while [ -h "$SCRIPTS" ] ; do absolutiseScripts "`readlink "$SCRIPTS"`" "$SCRIPTS" ; done ; SCRIPTS="`dirname "$SCRIPTS"`"
. "$SCRIPTS/util.sh"

analyserParametres()
{
	while [ $# -gt 0 ]
	do
		case "$1" in
			-d) shift ; export PATH="$1/bin:$PATH" ;;
		esac
		shift
	done
	argOptions="$argOptions+php_`php-config --version | tr . _`"
}

analyserParametres "$@"

logiciel=apc

v 3.1.9 && modifs="lock" && prerequis="autoconf" || true
v 3.1.13 && modifs= || true
v 3.1.13 && modifs= || true
#v 3.1.14 && modifs= || true # Retirée de la "vente" par Rasmus, pour une question de fuite mémoire.

archive="http://pecl.php.net/get/APC-$version.tgz"

lock()
{
	# https://bugs.php.net/bug.php?id=59750
	# http://news.php.net/php.pecl.cvs/15669
	filtrer apc_lock.h sed -e '/define apc_lck_rdunlock/s/&//'
}

destiner

prerequis

obtenirEtAllerDansVersion

cd APC-$version

echo Correction… >&2
for modif in true $modifs ; do $modif ; done

echo Configuration… >&2
phpize
./configure --prefix="$dest"

echo Compilation… >&2
make

echo Installation… >&2
sudo make install
apcso="`cd modules && find . -name \*apc\*.so\* | tail -1`" # Entre les apc.so et les libapc.so.0.0, youpi.
apcso="`basename "$apcso"`"
ini="`php -i | sed -e '/^Loaded Configura/!d' -e 's/.* => //'`"
sufiltrer "$ini" sed -e '${
a\
extension = '"$apcso"'
a\
apc.enabled = 1
}' -e '/extension = .*apc.*\.so/d' -e '/apc.enabled/d'
sudoku mkdir "$dest" # Pour placement du fichier témoin par sutiliser.

sutiliser -

rm -Rf "$TMP/$$"
