set -e

SCRIPTS="`command -v "$0"`" ; SCRIPTS="`dirname "$SCRIPTS"`" ; echo "$SCRIPTS" | grep -q "^/" || SCRIPTS=`pwd`/"$SCRIPTS"
. "$SCRIPTS/util.sh"

logiciel=postgresql
version=8.0.1

version=8.0.3

version=9.1.2
modifs=bsdAvecPythonThreade

version=9.2.1
modifs=

bsdAvecPythonThreade()
{
	filtrer configure sed -e '/freebsd.*)$/,/;;/d'
}

dest="$INSTALLS/$logiciel-$version"
archive=http://ftp.postgresql.org/pub/source/v$version/postgresql-$version.tar.bz2
pge $version 9 || jar=http://jdbc.postgresql.org/download/postgresql-8.0-310.jdbc3.jar

[ -d "$dest" ] && exit 0

obtenirEtAllerDansVersion

echo Corrections… >&2
for modif in true $modifs
do
	"$modif"
done

echo Configuration… >&2
./configure --prefix="$dest" --enable-thread-safety --with-python --with-perl --with-pam --with-rendezvous --with-openssl

echo Compilation… >&2
make

echo Installation… >&2
sudo make install
pge $version 9 || sudo cp `obtenir "$jar"` "$dest/lib/postgresql.jar"
pge $version 9.2 && ( cd contrib/hstore && make && sudo make install ) || true
sutiliser "$logiciel-$version"

echo "Auto-démarrage…" >&2
creeCompte -s /bin/sh -d "$HOME/var/postgresql" postgresql 4100
case `uname` in
	FreeBSD)
		bdd="$HOME/var/postgresql"
		filtrer contrib/start-scripts/freebsd sed -e "/^prefix=/s#=.*#=$INSTALLS#" -e "/^PGDATA=/s#=.*#=$bdd#" -e "/^PGUSER=/s#=.*#=postgresql#"
		sudo cp contrib/start-scripts/freebsd "$INSTALLS/etc/rc.d/postgresql"
		sudo chmod u+x "$INSTALLS/etc/rc.d/postgresql"
		sudo mkdir -p "$bdd"
		sudo chown -R postgresql:postgresql "$bdd"
		sudo chmod -R go-rwx "$bdd"
		# A priori il faut monter les valeurs dans /boot/loader.conf; ex.: kern.ipc.semmni=20 kern.ipc.semmns=120 kern.ipc.semmnu=60 kern.ipc.semmap=60
		sudo -u postgresql initdb "$bdd"
		;;
esac

rm -Rf "$TMP/$$"
