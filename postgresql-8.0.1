set -e

SCRIPTS="`command -v "$0"`" ; SCRIPTS="`dirname "$SCRIPTS"`" ; echo "$SCRIPTS" | grep -q "^/" || SCRIPTS=`pwd`/"$SCRIPTS"
. "$SCRIPTS/util.sh"

logiciel=postgresql
version=8.0.1

version=8.0.3

dest="/usr/local/$logiciel-$version"
archive=ftp://ftp.fu-berlin.de/unix/databases/$logiciel/v$version/$logiciel-$version.tar.bz2
jar=http://jdbc.postgresql.org/download/postgresql-8.0-310.jdbc3.jar
compil=/tmp/$logiciel

[ -d "$dest" ] && exit 0

obtenirEtAllerDans "$archive"

echo Configuration… >&2
./configure --prefix="$dest" --enable-thread-safety --with-python --with-perl --with-pam --with-rendezvous --with-openssl

echo Compilation… >&2
make

echo Installation… >&2
sudo make install
sudo cp `obtenir "$jar"` "$dest/lib/postgresql.jar"
sutiliser "$logiciel-$version"

rm -Rf /tmp/$$
