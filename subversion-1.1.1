set -e

if [ "$SCRIPTS" = "" ] ; then SCRIPTS=`which "$0"` ; SCRIPTS=`dirname "$SCRIPTS"` ; echo "$SCRIPTS" | grep -q "^/" || SCRIPTS=`pwd`/"$SCRIPTS" ; fi
. "$SCRIPTS/util.bash"

inclure db
inclure apr
inclure apr-util
inclure gettext

logiciel=subversion

v 1.2.3 && prerequis=neon || true
v 1.4.6 && modifs="lssl" || true
v 1.7.2 && modifs= || true
v 1.7.6 && modifs=destdir || true
v 1.7.10 && modifs=destdir || true
v 1.8.0 && modifs= && prerequis="serf=1.2.1 pkgconfig" || true # La détection de serf est faite via pkgconfig.
v 1.8.3 || true # La détection de serf est faite via pkgconfig.

prerequis

# Modifications

lssl()
{
	filtrer configure sed -e '/if.*with_ssl/a\
  LIBS="-lssl $LIBS"
'
}

destdir()
{
	# Un APACHELIBEXECDIR = DESTDIR dans le Makefile, qui fait assez moche, et fait planter un libtool.
	export DESTDIR="$dest/lib"
}

# Variables

dest="$INSTALLS/$logiciel-$version"
archive="http://subversion.tigris.org/tarballs/$logiciel-$version.tar.bz2"
pge $version 1.6.9 && archive="http://mirrors.ircam.fr/pub/apache/subversion/subversion-$version.tar.bz2"

[ -d "$dest" ] && exit 0

echo Obtention et décompression… >&2
obtenirEtAllerDansVersion

echo Correction… >&2
for modif in true $modifs ; do $modif ; done

echo Configuration… >&2
./configure --prefix="$dest" --with-ssl

echo Compilation… >&2
make

echo Installation… >&2
sudo make install

sutiliser $logiciel-$version
