set -e

if [ "$SCRIPTS" = "" ] ; then SCRIPTS=`which "$0"` ; SCRIPTS=`dirname "$SCRIPTS"` ; echo "$SCRIPTS" | grep -q "^/" || SCRIPTS=`pwd`/"$SCRIPTS" ; fi
. "$SCRIPTS/util.sh"

logiciel=readline
version=5.0
modifs=darwin8aussi

version=5.2.14
modifs=darwin89aussi

version=6.1.2
modifs=

dest=$INSTALLS/$logiciel-$version

darwin8aussi()
{
	filtrer support/shobj-conf sed -e 's/darwin7/darwin[78]/'
}

darwin89aussi()
{
	filtrer support/shobj-conf sed -e 's/darwin7/darwin[789]/' -e 's/darwin8/darwin[89]/'
}

[ -d "$dest" ] && exit 0

rustine=${version##*.}
version=${version%.*}

archive="ftp://ftp.ironie.org/ftp.gnu.org/pub/gnu/$logiciel/$logiciel-$version.tar.gz"

echo Obtention et décompression… >&2
obtenirEtAllerDansVersion
n=1
while [ $n -le $rustine ]
do
	v2="`echo $version | tr -d .`"
	url="`dirname "$archive"`/$logiciel-$version-patches/$logiciel$v2-`printf "%03.3d" $n`"
	patch -p0 < "`obtenir "$url"`"
	n=`expr $n + 1`
done

echo Correction… >&2
for modif in true $modifs ; do $modif ; done

echo Configuration… >&2
./configure --prefix="$dest"

echo Compilation… >&2
make

echo Installation… >&2
sudo make install

sutiliser $logiciel-$version.$rustine
