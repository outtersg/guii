set -e

SCRIPTS="`command -v "$0"`" ; SCRIPTS="`dirname "$SCRIPTS"`" ; echo "$SCRIPTS" | grep -q "^/" || SCRIPTS=`pwd`/"$SCRIPTS"
. "$SCRIPTS/util.bash"

logiciel=icu

# Historique des versions gérées

version=3.4

archive=ftp://ftp.software.ibm.com/software/globalization/$logiciel/$version/$logiciel-$version.tgz

version=3.6

archive=ftp://ftp.software.ibm.com/software/globalization/$logiciel/$version/${logiciel}4c-${version//./_}-src.tgz

version=4.4

# Me fait Bus errorer un packagedata à la compil; à moins que ça ne soit le gmake que j'ai installé entretemps à la place du BSDmake.
#version=4.4.1

# Crétin, il ne trouve même pas son fichier.
#version=3.8.1

pge $version 3.8 && archive=http://download.icu-project.org/files/icu4c/$version/${logiciel}4c-${version//./_}-src.tgz

# Modifications

# Variables

dest="/usr/local/$logiciel-$version"

[ -d "$dest" ] && exit 0

if [[ $version = *-* ]] ; then
	obtenirEtAllerDansCvs -d $version $archive_cvs
else
	obtenirEtAllerDans "$archive"
fi

echo Correction… >&2
for modif in true $modifs ; do $modif ; done

echo Configuration… >&2
cd source
type=`uname -s`
[ $type = Darwin ] && type=MacOSX
./runConfigureICU $type --prefix="$dest"

echo Compilation… >&2
make

echo Installation… >&2
sudo make install
sutiliser "$logiciel-$version"

rm -Rf /tmp/$$
