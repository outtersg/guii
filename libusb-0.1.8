set -e

if [ "$SCRIPTS" = "" ] ; then SCRIPTS=`which "$0"` ; SCRIPTS=`dirname "$SCRIPTS"` ; echo "$SCRIPTS" | grep -q "^/" || SCRIPTS=`pwd`/"$SCRIPTS" ; fi
. "$SCRIPTS/util.sh"

logiciel=libusb
version=0.1.8

version=0.1.12

dest=/usr/local/$logiciel-$version

[ -d "$dest" ] && exit 0

cd /tmp
echo Obtention et décompression… >&2
tar xzf `obtenir "http://ovh.dl.sourceforge.net/sourceforge/libusb/$logiciel-$version.tar.gz"`
cd /tmp/$logiciel-$version

echo Configuration… >&2
./configure --prefix=/usr/local/$logiciel-$version

echo Correction… >&2
filtrer libtool sed -e '1a\
shared_ext=.dylib
'

echo Compilation… >&2
make

echo Installation… >&2
sudo make install

sudo utiliser $logiciel-$version
