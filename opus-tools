+    {"track", required_argument, NULL, 0},
     {"title", required_argument, NULL, 0},
     {"album", required_argument, NULL, 0},
     {"date", required_argument, NULL, 0},
@@ -541,6 +543,12 @@
         }else if(strcmp(long_options[option_index].name,"artist")==0){
           save_cmd=0;
           comment_add(&inopt.comments, &inopt.comments_length, "artist", optarg);
+        } else if(strcmp(long_options[option_index].name,"composer")==0){
+          save_cmd=0;
+          comment_add(&inopt.comments, &inopt.comments_length, "composer", optarg);
