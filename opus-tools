set -e

absolutiseScripts() { SCRIPTS="$1" ; echo "$SCRIPTS" | grep -q ^/ || SCRIPTS="`dirname "$2"`/$SCRIPTS" ; } ; absolutiseScripts "`command -v "$0"`" "`pwd`/." ; while [ -h "$SCRIPTS" ] ; do absolutiseScripts "`readlink "$SCRIPTS"`" "$SCRIPTS" ; done ; SCRIPTS="`dirname "$SCRIPTS"`"
. "$SCRIPTS/util.sh"

logiciel=opus-tools

# Historique des versions gérées

v 0.1.5 && prerequis="opus ogg" && modifs="composer" || true
v 0.1.6 || true
v 0.1.9 && prerequis="opus ogg flac" || true

prerequis

# Modifications

composer()
{
	patch -p0 <<TERMINE
--- src/opusenc.c	2017-02-05 21:46:39.000000000 +0100
+++ src/opusenc.c	2017-02-05 21:48:07.000000000 +0100
