set -e

absolutiseScripts() { SCRIPTS="$1" ; echo "$SCRIPTS" | grep -q ^/ || SCRIPTS="`dirname "$2"`/$SCRIPTS" ; } ; absolutiseScripts "`command -v "$0"`" "`pwd`/." ; while [ -h "$SCRIPTS" ] ; do absolutiseScripts "`readlink "$SCRIPTS"`" "$SCRIPTS" ; done ; SCRIPTS="`dirname "$SCRIPTS"`"
. "$SCRIPTS/util.bash"

logiciel=db
version=4.2.52

version=4.3.28

archive="ftp://sleepycat1.inetu.net/releases/$logiciel-$version.tar.gz"

archive="http://download-uk.oracle.com/berkeley-db/$logiciel-$version.tar.gz"

archive="http://download-uk.oracle.com/berkeley-db/$logiciel-$version.tar.gz"

version=4.5.20

archive="http://download.oracle.com/berkeley-db/db-$version.tar.gz"

version=5.0.21

dest="$INSTALLS/$logiciel-$version"

[ -d "$dest" ] && exit 0

echo Obtention et décompression… >&2
obtenirEtAllerDansVersion

echo Configuration… >&2
cd ./build_unix
../dist/configure --prefix="$dest"

echo Compilation… >&2
make

echo Installation… >&2
sudo make install
sutiliser $logiciel-$version

rm -Rf "$TMP/$$"
